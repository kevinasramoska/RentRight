@using Microsoft.AspNetCore.Identity
@using RentRight.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        var roles = await UserManager.GetRolesAsync(currentUser);

        // âœ… Greet the user
        <li class="nav-item">
            <span class="nav-link text-dark">
                Hello @currentUser.FullName!
            </span>
        </li>

        @* -----------------------------
       Role-specific menu examples
       ----------------------------- *@
        @if (roles.Contains("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Admin Panel</a>
            </li>
        }
        @if (roles.Contains("Landlord"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Properties" asp-action="Create">Add Property</a>
            </li>
        }
        @if (roles.Contains("Tenant"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Properties" asp-action="Index">Browse Properties</a>
            </li>
        }

        @* -----------------------------
       Logout button
       ----------------------------- *@
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                  method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        @* Not logged in -> show Login/Register *@
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>