@model RentRight.Models.Property

@{
    ViewData["Title"] = "Delete Property";
}

<h2>Delete Property</h2>

<h4>Are you sure you want to delete this property?</h4>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Rent Amount:</strong> @Model.RentAmount.ToString("C")</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>